<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="170dp"
        android:layout_marginRight="10dp"
        android:paddingTop="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/recently_added_book"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/recently_added_book_cover"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:src="@drawable/sololevel"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/text_recently_added_book_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title: King of Fighter"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textSize="10dp"
            android:layout_below="@+id/recently_added_book"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/recently_added_book_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Author: Ben Kim"
            android:textSize="10dp"
            android:layout_below="@id/text_recently_added_book_title"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

</RelativeLayout>