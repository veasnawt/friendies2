<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.bookmark.BookmarkFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/topview_download"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/txtDiscover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bookmark"
                android:textSize="30sp"
                android:textStyle="bold"/>

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/userpic"
                app:civ_border_width="1dp"
                app:civ_border_color="#EEE"
                android:layout_alignParentRight="true"/>

            <SearchView
                android:id="@+id/searchbar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:clickable="true"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:background="@drawable/rounded_searchbar"
                android:queryHint="@string/search"
                android:iconifiedByDefault="false"
                android:queryBackground="@android:color/transparent"
                android:layout_below="@+id/txtDiscover"
                android:focusableInTouchMode="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bookmark"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/topview_download"
            android:layout_width="400dp"
            android:layout_height="150dp">

            <RelativeLayout
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_bookmark"
                    android:layout_width="30dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="340dp"
                    android:src="@drawable/bookmark" />

                <ImageView
                    android:id="@+id/img_Cover_download"
                    android:layout_width="90dp"
                    android:layout_height="130dp"
                    android:src="@drawable/sololevel" />

                <TextView
                    android:layout_toRightOf="@+id/img_Cover_download"
                    android:id="@+id/tv_title"
                    android:textSize="24sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:text="Solo Leveling"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/tv_category"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@+id/tv_title"
                    android:textSize="14sp"
                    android:layout_toRightOf="@+id/img_Cover_download"
                    android:text="Action"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginTop="30dp"
                    android:id="@+id/tv_Remove"
                    android:layout_marginLeft="195dp"
                    android:layout_below="@+id/tv_category"
                    android:textSize="20sp"
                    android:layout_toRightOf="@+id/img_Cover_download"
                    android:text="Remove"
                    android:layout_width="80dp"
                    android:layout_height="30dp"/>

            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>