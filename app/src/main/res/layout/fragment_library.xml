<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.library.LibraryFragment">

    <TextView
        android:id="@+id/txtRecent"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:text="Recent"
        android:textSize="26sp"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/recycler_recent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtRecent">
    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/bottomview"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="19dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recycler_recent">

        <TextView

            android:textSize="26sp"
            android:text="Home"
            android:id="@+id/tv_home_library"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView

            android:layout_marginTop="10dp"
            android:textSize="26sp"
            android:id="@+id/tv_category_library"
            android:text="Category"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView

            android:layout_marginTop="10dp"
            android:textSize="26sp"
            android:id="@+id/tv_download_library"
            android:text="Downloads"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView

            android:layout_marginTop="10dp"
            android:textSize="26sp"
            android:text="Bookmarks"
            android:id="@+id/tv_bookmarks_library"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</RelativeLayout>